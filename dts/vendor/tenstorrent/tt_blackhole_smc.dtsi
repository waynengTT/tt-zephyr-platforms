	};

	memc0: bh_memc0 {
		compatible = "tenstorrent,bh-memc";
		status = "disabled";
	};

	memc1: bh_memc1 {
		compatible = "tenstorrent,bh-memc";
		status = "disabled";
	};

	memc2: bh_memc2 {
		compatible = "tenstorrent,bh-memc";
		status = "disabled";
	};

	memc3: bh_memc3 {
		compatible = "tenstorrent,bh-memc";
