			    "rxen",
			    "data";
		gpio-controller;
		#gpio-cells = <2>;
		ngpios = <16>;
	};

	ref_clk: ref_clk {
		compatible = "fixed-clock";

		clock-frequency = <50>;
		#clock-cells = <0>;
	};

	pll0: pll@80020100 {
		compatible = "tenstorrent,bh-clock-control";

		reg = <0x80020100 0x100>;
		clocks = <&ref_clk>;
		#clock-cells = <0>;

		refdiv = <2>;
		postdiv = <1>;
		fbdiv = <128>;
		ctrl_bus1 = <0x18>;
		ctrl_bus5 = <1>;
		post_divs = <3 0 0 0>;
		use_post_divs = <1 1 1 1>;
		status = "disabled";
	};

	pll1: pll@80020200 {
		compatible = "tenstorrent,bh-clock-control";

		reg = <0x80020200 0x100>;
		clocks = <&ref_clk>;
		#clock-cells = <0>;

		refdiv = <2>;
		postdiv = <1>;
		fbdiv = <192>;
		ctrl_bus1 = <0x18>;
		ctrl_bus5 = <1>;
		post_divs = <5 4 23 0>;
		use_post_divs = <1 1 1 1>;
		status = "disabled";
	};

	pll2: pll@80020300 {
		compatible = "tenstorrent,bh-clock-control";

		reg = <0x80020300 0x100>;
		clocks = <&ref_clk>;
		#clock-cells = <0>;

		refdiv = <2>;
		postdiv = <1>;
		fbdiv = <68>;
		ctrl_bus1 = <0x18>;
		ctrl_bus5 = <1>;
		post_divs = <1 0 0 0>;
		use_post_divs = <1 1 1 1>;
		status = "disabled";
	};

	pll3: pll@80020400 {
		compatible = "tenstorrent,bh-clock-control";

		reg = <0x80020400 0x100>;
		clocks = <&ref_clk>;
		#clock-cells = <0>;

		refdiv = <2>;
		postdiv = <1>;
		fbdiv = <120>;
		ctrl_bus1 = <0x18>;
		ctrl_bus5 = <1>;
		post_divs = <3 0 0 0>;
		use_post_divs = <1 1 1 1>;
		status = "disabled";
	};

	pll4: pll@80020500 {
		compatible = "tenstorrent,bh-clock-control";

		reg = <0x80020500 0x100>;
		clocks = <&ref_clk>;
		#clock-cells = <0>;

		refdiv = <2>;
		postdiv = <1>;
		fbdiv = <64>;
		ctrl_bus1 = <0x18>;
		ctrl_bus5 = <1>;
		post_divs = <1 1 1 1>;
		use_post_divs = <1 1 1 1>;
		status = "disabled";
	};

	pvt: pvt@80030700 {
		compatible = "tenstorrent,bh-pvt";
		reg = <0x80030700 0x4>;
		num_pd = <16>;
		num_vm = <8>;
		num_ts = <8>;
		status = "disabled";
	};

	dma1: noc_dma@ffb20000 {
		compatible = "tenstorrent,noc-dma";
		reg = <0xffb20000 0x20c>;

		#dma-cells = <1>;
		dma-channels = <4>;
		dma-buf-addr-alignment = <64>;
	};

	sysclk: system-clock {
		compatible = "fixed-clock";
		clock-frequency = <500000000>;
		#clock-cells = <0>;
	};

	intc: arcv2-intc {
		compatible = "snps,arcv2-intc";
		interrupt-controller;
		#interrupt-cells = <2>;
	};

	idu_intc: idu-interrupt-controller {
		compatible = "snps,archs-idu-intc";
		interrupt-controller;
		#interrupt-cells = <2>;
		interrupt-parent = <&intc>;
	};

	ictl0: ictl@800c0000 {
		compatible = "snps,designware-intc";
		reg = <0x800c0000 0x1000>;
		interrupt-parent = <&intc>;
		interrupts = <33 1>;
		interrupt-controller;
		#interrupt-cells = <3>;
		num-irqs = <34>;
	};

	ictl1: ictl@800d0000 {
		compatible = "snps,designware-intc";
		reg = <0x800d0000 0x1000>;
		interrupt-parent = <&intc>;
		interrupts = <34 1>;
		interrupt-controller;
		#interrupt-cells = <3>;
		num-irqs = <22>;
	};

	ictl2: ictl@800e0000 {
		compatible = "snps,designware-intc";
		reg = <0x800e0000 0x1000>;
		interrupt-parent = <&intc>;
		interrupts = <35 1>;
		interrupt-controller;
		#interrupt-cells = <3>;
		num-irqs = <64>;
	};

	ictl3: ictl@800f0000 {
		compatible = "snps,designware-intc";
		reg = <0x800f0000 0x1000>;
		interrupt-parent = <&intc>;
		interrupts = <36 0>;
		interrupt-controller;
		#interrupt-cells = <3>;
		num-irqs = <64>;
	};

	ici: intercore-interrupt-unit {
		compatible = "snps,archs-ici";
		interrupts = <19 2>;
		interrupt-parent = <&intc>;
	};

	pinctrl: pinctrl {
		compatible = "tenstorrent,bh-pinctrl";
		status = "disabled";
	};

	timer0: timer0 {
		compatible = "snps,arc-timer";
		interrupts = <16 2>;
		interrupt-parent = <&intc>;
	};

	timer1: timer1 {
		compatible = "snps,arc-timer";
		interrupts = <17 2>;
		interrupt-parent = <&intc>;
	};

	wdt0: wdt0 {
		compatible = "tenstorrent,bh-watchdog";
		status = "disabled";
	};

